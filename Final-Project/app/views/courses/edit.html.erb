<% provide(:title, 'Edit Course') %>
<h1>Edit Course</h1>

<%= form_with(model: @course, url: course_path(@course), method: :patch) do |f| %>
  <%= render "course_errors_messages" %>

  <div>
    <%= f.label :name, "Course Name" %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= f.label :description, "Course Description" %><br>
    <%= f.text_field :description, autofocus: true %>
  </div>

  <div>
    <%= f.label :credits, "Number of Credits" %><br>
    <%= f.number_field :credits, min: 1, max: 9 %>
  </div>

  <div>
    <%= f.submit "Update Course" %>
  </div>
<% end %>
