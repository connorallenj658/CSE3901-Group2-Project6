<h2>Sign Up</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :name, "Full Name" %><br>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %> (6 characters minimum)<br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :role, "Select Role" %><br>
    <%= f.select :role, ["teacher", "student"], include_blank: "Select a Role" %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
