<div class="login-container">
  <h2 class="login-title">Log In</h2>
  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key %>"><%= message %></div>
  <% end %>
  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "login-form" } do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
