<div class="container">
  <h1 class="page-title">Presentations</h1>
  <% @presentations.each do |presentation| %>
    <div class="presentation-card">
      <h2 class="presentation-title">
        <%= link_to presentation.title, presentation_path(presentation), class: "presentation-link" %>
      </h2>
      <p class="presentation-meta"><strong>Date:</strong> <%= presentation.date.strftime("%B %d, %Y") %></p>
      <p class="presentation-description"><strong>Description:</strong> <%= presentation.description %></p>

      <div class="actions">
        <% if current_user.teacher? || current_user == presentation.user %>
          <%= link_to "Edit", edit_presentation_path(presentation), class: "button edit-button" %>
          <%= button_to "Delete", presentation_path(presentation), method: :delete, class: "button delete-button", data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
