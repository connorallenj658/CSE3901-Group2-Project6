<h1>Create a New Presentation</h1>

<%= form_with model: @presentation, local: true do |f| %>
  <div>
    <%= f.label :title, "Presentation Title" %><br>
    <%= f.text_field :title %>
  </div>

  <br>
  <div>
    <%= f.label :date, "Presentation Date" %><br>
    <%= f.date_select :date %>
  </div>

  <br>

  <div>
    <%= f.label :credits, "Presenter Email" %><br>
    <%= f.text_field :credits %>
  </div>
<br>
  <div>
    <%= f.label :description, "Presentation Description" %><br>
    <%= f.text_area :description %>
  </div>
  <br>
  <br>
  <div>
    <%= f.submit "Create Presentation" %>
  </div>
<% end %>

<%= link_to "Back to Presentations", presentations_path %>
