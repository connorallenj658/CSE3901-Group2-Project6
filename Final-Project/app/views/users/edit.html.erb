<h1>Edit User</h1>

<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :role %><br>
    <%= f.select :role, ["student", "teacher", "admin"] %>
  </div>

  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>

<%= link_to "Back", users_path %>
